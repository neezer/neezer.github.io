{
  "name": "neezer.github.io",
  "version": "1.0.0",
  "description": "My personal website.",
  "repository": "https://github.com/neezer/neezer.github.io",
  "author": "Evan Sherwood <evan@sherwood.io>",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "@types/react": "^16.8.13",
    "@types/react-dom": "^16.8.4",
    "@types/tape": "^4.2.33",
    "husky": "^1.3.1",
    "jsdom": "^14.0.0",
    "jsdom-global": "^3.0.2",
    "parcel-bundler": "^1.12.3",
    "prettier": "^1.17.0",
    "react-testing-library": "^6.1.2",
    "rimraf": "^2.6.3",
    "tape": "^4.10.1",
    "tiny-glob": "^0.2.6",
    "ts-node": "^8.1.0",
    "tslint": "^5.16.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.4.3"
  },
  "dependencies": {
    "@emotion/core": "^10.0.10",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-router-dom": "^5.0.0"
  },
  "scripts": {
    "build": "yarn clean && parcel build --out-dir . public/index.html",
    "clean": "yarn run -s find-artifacts | xargs rimraf",
    "find-artifacts": "node -e \"require('tiny-glob')('*(index.html|src.*.+(js|js.map))').then(fs => fs.map(f => console.log(f)))\"",
    "preview": "parcel public/index.html",
    "test": "tape --require ts-node/register 'test/**/*.test.+(ts|tsx)'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn test && yarn build && yarn run -s find-artifacts | xargs git add"
    }
  }
}
